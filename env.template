# Database Configurations
# Windows/Mac use: host.docker.internal
# Linux use: 172.17.0.1 or host internal ip
DB_HOST=host.docker.internal
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=momotalk

# Server Configurations
SECRET_KEY=your_secret_key_here

# Message Encryption Key (32 characters, KEEP IT SAFE)
MESSAGE_ENCRYPTION_KEY=your_32_char_encryption_key_here

PORT=5000
HOST_DOMAIN=http://localhost:3000

# Server URL for file uploads (where uploaded files can be accessed)
SERVER_URL=http://localhost:5000

# Frontend API Configuration
# This is the backend server URL that frontend will connect to
REACT_APP_SERVER_DOMAIN=http://localhost:5000

# Node Enviroment
NODE_ENV=production

